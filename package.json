{
  "name": "vscode-beehive-extension",
  "displayName": "vscode-beehive-extension",
  "description": "SugarTurboS 开发针对项目命令规范及脚本运行的辅助工具～",
  "version": "0.0.2",
  "publisher": "pengdaokuan",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:BeeHive-Command"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SugarTurboS/vscode-beehive-extension.git"
  },
  "keywords": [
    "vscode",
    "extension",
    "beehive",
    "command",
    "scripts"
  ],
  "author": {
    "name": "彭道宽"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "vscode-beehive-extension",
      "properties": {
        "vscode-beehive-extension.matchConfig": {
          "type": "string",
          "description": "vscode-beehive 版本配置，默认高配版本",
          "enum": [
            "lowMatch",
            "middleMatch",
            "highMatch"
          ],
          "default": "highMatch",
          "scope": "window"
        },
        "vscode-beehive-extension.splitTerminal": {
          "type": "boolean",
          "description": "是否支持分割终端，默认支持",
          "default": true,
          "scope": "window"
        },
        "vscode-beehive-extension.autoRunTerminal": {
          "type": "boolean",
          "description": "是否自动运行脚本，默认自动运行",
          "default": true,
          "scope": "window"
        }
      }
    },
    "commands": [],
    "viewsWelcome": [
      {
        "view": "BeeHive-Command",
        "contents": "提高你的效率，释放你的双手～"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sugar",
          "title": "Sugar-BeeHive",
          "icon": "./assets/logo_default.svg"
        }
      ],
      "panel": [
        {
          "id": "sugar",
          "title": "Package Explorer",
          "icon": "./assets/logo_default.svg"
        }
      ]
    },
    "views": {
      "sugar": [
        {
          "id": "BeeHive-Command",
          "name": "01.命令集"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.42.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "ts-loader": "^8.0.14",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}
